#!/usr/bin/env php
<?php

// Find autoload
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
];

foreach ($autoloadPaths as $path) {
    if (file_exists($path)) {
        require $path;
        break;
    }
}

use Posternak\Commandeer\Shell\CommandeerShell;

$shell = new CommandeerShell();
$shell->run();
